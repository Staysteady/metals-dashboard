# Bloomberg Configuration - Windows Local Environment
# Copy this file to .env and update as needed

USE_DUMMY_DATA=false
BLOOMBERG_HOST=localhost
BLOOMBERG_PORT=8194

# Path to Bloomberg C++ API
# Update this path if your Bloomberg API is installed elsewhere
BLPAPI_ROOT=C:\blp\API\APIv3\C++API\v3.21.2.1

# Database
DATABASE_PATH=./data/metals.duckdb

# API Settings
API_TIMEOUT=30000
MAX_RETRIES=3
CACHE_DURATION=300

# Logging
LOG_LEVEL=INFO
BLOOMBERG_DEBUG=false 